
<div class="row">

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Update Account
      </div>
      <div class="card-body">
        <form class="" action="/profile" method="post">
          <div class="form-group">
            <input type="text" name="username" placeholder="change username" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="password" placeholder="change password" class="form-control">
          </div>
          <button class="btn btn-primary">Change Password</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Passport Status
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          {{#if user.photos}}
            <li class="list-group-item bg-success text-white">
              Facebook
            </li>
          {{else}}
            <li class="list-group-item">
              Facebook
              <a href="/auth/facebook" class="btn btn-success btn-sm float-right">Connect</a>
            </li>
          {{/if}}

          {{#if tweets.length}}
            <li class="list-group-item bg-success text-white">
              Twitter
            </li>
          {{else}}
            <li class="list-group-item">
              Twitter
              <a href="/auth/twitter" class="btn btn-success btn-sm float-right">Connect</a>
            </li>
          {{/if}}

          {{#if repos.length}}
              <li class="list-group-item bg-success text-white">
                Github
              </li>
            {{else}}
            <li class="list-group-item">
              Github
              <a href="/auth/github" class="btn btn-success btn-sm float-right">Connect</a>
            </li>
            {{/if}}
        </ul>
      </div>
    </div>
  </div>

</div>

<br>
<hr>

<div class="row">

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Facebook
      </div>
      <div class="card-body">
        <img src="{{user.photos}}" alt="">
      </div>
    </div>
    <br>
    <div class="card">
      <div class="card-header">
        Github Repos
      </div>
      <div class="card-body">
        <ul>
          {{#each repos as |repo|}}
          <li>{{repo}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Twitter Tweets
      </div>
      <div class="card-body">
        {{#each tweets as |tweet|}}
          <h6>{{tweet.name}}</h6>
          <p>{{tweet.text}}</p>
          <hr>
        {{/each}}
      </div>
    </div>
  </div>
</div>

